# ========================================
# MySQL Source Database Configuration
# ========================================
# Your DigitalOcean Managed MySQL credentials
MYSQL_HOST=your-mysql-host.db.ondigitalocean.com
MYSQL_PORT=25060
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# MySQL Replication User (will be created by validation script)
MYSQL_REPLICATION_USER=debezium_user
MYSQL_REPLICATION_PASSWORD=generate_strong_password_here

# ========================================
# ClickHouse Configuration
# ========================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=generate_clickhouse_password_here
CLICKHOUSE_DATABASE=analytics

# ========================================
# Redpanda Configuration
# ========================================
REDPANDA_KAFKA_PORT=9092
REDPANDA_ADMIN_PORT=9644
REDPANDA_SCHEMA_REGISTRY_PORT=8081
REDPANDA_HTTP_PROXY_PORT=8082

# ========================================
# Kafka Connect Configuration
# ========================================
KAFKA_CONNECT_REST_PORT=8083
KAFKA_CONNECT_GROUP_ID=clickhouse-cdc-group

# ========================================
# Redpanda Console Configuration
# ========================================
REDPANDA_CONSOLE_PORT=8080
CONSOLE_ADMIN_USER=admin
CONSOLE_ADMIN_PASSWORD=generate_console_password_here

# ========================================
# Network & Performance Settings
# ========================================
# Expected throughput (for validation)
EXPECTED_MIN_THROUGHPUT_MBPS=10

# Batch sizes for ClickHouse Sink
CLICKHOUSE_SINK_BATCH_SIZE=50000
CLICKHOUSE_SINK_FLUSH_INTERVAL_MS=30000

# ========================================
# Monitoring & Alerting (Optional)
# ========================================
ALERT_EMAIL=your_email@example.com
